<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outline Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Outline Color -->
            <corners android:radius="5dp" /> <!-- Same as CardView corner radius -->
        </shape>
    </item>

    <!-- Background Layer -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background Color -->
            <corners android:radius="4dp" /> <!-- Slightly smaller radius for inner background -->
        </shape>
    </item>
</layer-list>